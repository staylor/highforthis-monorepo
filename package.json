  "author": "Scott Taylor <scott.c.taylor@mac.com>",
  "license": "private",
  "private": true,
  "engines": {
    "node": ">=18.17.1"
  },
  "sideEffects": false,
  "type": "module",
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/fragment-matcher": "5.0.2",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/schema-ast": "4.0.2",
    "@graphql-codegen/typescript": "4.0.6",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "@remix-run/eslint-config": "2.8.0",
    "@tailwindcss/forms": "0.5.7",
    "@testing-library/dom": "9.3.4",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.2.1",
    "@testing-library/user-event": "14.5.2",
    "@types/bcrypt": "5.0.2",
    "@types/compression": "1.7.5",
    "@types/cookie-parser": "1.4.7",
    "@types/cors": "2.8.17",
    "@types/eslint": "8.56.3",
    "@types/express": "4.17.21",
    "@types/ffprobe": "1.1.8",
    "@types/ffprobe-static": "2.0.3",
    "@types/html-escape": "2.0.2",
    "@types/lodash.debounce": "4.0.9",
    "@types/lodash.merge": "4.6.9",
    "@types/morgan": "1.9.9",
    "@types/multer": "1.4.11",
    "@types/musicmetadata": "2.0.9",
    "@types/node": "20.11.20",
    "@types/node-fetch": "2.6.11",
    "@types/passport": "1.0.16",
    "@types/passport-jwt": "4.0.1",
    "@types/react": "18.2.62",
    "@types/react-dom": "18.2.19",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.18",
    "env-cmd": "10.1.0",
    "esbuild": "0.20.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-tailwindcss": "3.14.3",
    "happy-dom": "13.6.2",
    "jest": "29.7.0",
    "postcss": "8.4.35",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.11",
    "react": "18.2.0",
    "rimraf": "5.0.5",
    "tailwindcss": "3.4.1",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.7.1",
    "typescript": "5.3.3",
    "vite": "5.1.5",
    "vite-tsconfig-paths": "4.3.1",
    "vitest": "1.3.1"
  },
  "scripts": {
    "codegen": "graphql-codegen && yarn lint-fix && ./apollo-ios-cli generate",
    "graphql:dev": "yarn workspace @highforthis/graphql dev",
    "graphql:dev:start": "env-cmd -e dev node ./graphql/lib/index.js",
    "graphql:prod:start": "env-cmd -e prod node ./graphql/lib/index.js",
    "graphql:prod": "yarn workspace @highforthis/graphql prod",
    "web:dev": "yarn workspace @highforthis/web dev",
    "web:prod": "yarn workspace @highforthis/web prod",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint --report-unused-disable-directives .",
    "lint-fix": "yarn lint --fix",
    "test:web": "yarn workspace @highforthis/web test",
    "test:web:watch": "yarn workspace @highforthis/web test:watch",
    "test:web:update": "yarn workspace @highforthis/web test:update",
    "typecheck:graphql": "tsc --project graphql/tsconfig.json",
    "typecheck:web": "tsc --project web/tsconfig.json"
  },
  "workspaces": ["graphql", "web"]
}
